<%- include('partials/header', {title: 'product information'}) %> <%-
include(`partials/${nav}`) %>

<div class="container-fluid mt-4">
  <div class="row d-flex justify-content-center"><h2>Product details</h2></div>
  <div class="card">
    <img
      src="<%= productInfo.product_image_info %>"
      class="card-img-top"
      alt="product image"
    />
    <hr />
    <div class="card-body">
      <h5 class="card-title"><%= productInfo.product_name %></h5>
      <p class="card-text"><%= productInfo.product_description %></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Posted by: <%= productInfo.first_name %></li>
      <li class="list-group-item">Posted on: <%= date %></li>
    </ul>
    <div class="card-body d-flex justify-content-around">
      <a
        href="/listing/<%= productInfo.product_category %>"
        class="card-link product-page-links"
        >All <%= productInfo.product_category %></a
      >
      <a href="/" class="card-link product-page-links">Explore listings</a>

      <a
        href="/request-item/<%= productId %>"
        class="card-link product-page-links"
        >Request item</a
      >
    </div>
  </div>
</div>
