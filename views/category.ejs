<%- include('partials/header', {title: `${category}`}) %> <%-
include(`partials/${nav}`) %>

<h6 class="mt-2">
  <i class="fa fa-arrow-left"></i> <a href="/">All categories</a>
</h6>

<div class="container pt-4 category-container">
  <span class="d-flex justify-content-center"><h2><%= category %></h2></span>
  <div class="row">
    <% for(let i =0; i<productInfo.length; i+=1){ %>
      <div class="col d-flex justify-content-center">
        <div class="card mt-3 " style="width: 15rem;" >
          <img
            src="/<%= productInfo[i].product_image_info %>"
            class="card-img-top product-image"
            alt="product image"
          />
          <div class="card-body">
            <h5 class="card-title"><%= productInfo[i].product_name %></h5>
            <p class="card-text"><%= productInfo[i].product_description %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              Posted by: <small><%= productInfo[i].user_id %></small>
            </li>
            <li class="list-group-item">
              Posted on: <small><%= productInfo[i].created_at %></small>
            </li>
            <li class="list-group-item">A third item</li>
          </ul>
          <div class="card-body">
            <a href="/request-item/<%= productInfo[i].id%>" class="card-link"
              >Request item</a
            >
            <a href="#" class="card-link">Request more info</a>
          </div>
        </div>
      </div>
        <% } %>
           
  </div>
</div>

 <%- include('partials/footer') %>